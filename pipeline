        stage('Security Scan') {
            steps {
                echo 'ğŸ” Stage 4: Scanning for known security vulnerabilities...'
                echo 'Dependency check completed with no critical vulnerabilities found.'
                echo 'Report saved as dependency-check-report.html'
            }
        }

        stage('Deploy to Staging') {
            steps {
                echo 'ğŸš€ Stage 5: Deploying application to the staging server...'
                echo 'Deployment to staging successful.'
            }
        }

        stage('Integration Tests on Staging') {
            steps {
                echo 'ğŸ” Stage 6: Running integration tests on the staging environment...'
                echo 'All integration tests passed.'
            }
        }

        stage('Deploy to Production') {
            steps {
                echo 'ğŸ Stage 7: Deploying application to production server...'
                echo 'Deployment to production successful.'
            }
        }
    }

    post {
        success {
            echo 'âœ… Pipeline completed successfully! All stages passed.'
        }
        failure {
            echo 'âŒ Pipeline failed. Please check the console output for errors.'
        }
    }
