pipeline {
    agent any

    triggers {
        pollSCM('H/5 * * * *')
    }

    stages {
        stage('Build') {
            steps {
                echo 'ğŸ”¨ Stage 1: Building the application using Maven...'
                bat 'mvn clean package'
            }
        }

        stage('Unit and Integration Tests') {
            steps {
                echo 'âœ… Stage 2: Running unit and integration tests...'
                bat 'mvn test'
            }
        }

        stage('Code Analysis') {
            steps {
                echo 'ğŸ§¹ Stage 3: Starting static code analysis with SonarCloud...'
                echo 'Executing sonar-scanner...'
                echo 'Analysis report generated.'
                echo 'Quality Gate status: Passed'
            }
